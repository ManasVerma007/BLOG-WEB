<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Homepage</title>
</head>
<body class="bg-dark text-light">

  <%- include('./partials/nav') %>

  <div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% blogs.forEach(blog => { %>
      <div class="col">
        <div class="card bg-body-tertiary text-dark">
          <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %> Cover Image" />
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <div class="d-flex justify-content-between align-items-center">
              <a href="/blog/x/<%= blog._id %>" class="btn btn-primary">View</a>
              <form action="http://localhost:5000/blog/x/delete/<%= blog._id %>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger" type="submit">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  
  

  <%- include('./partials/scripts') %>
</body>
</html>
